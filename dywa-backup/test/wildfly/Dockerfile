FROM alpine:3.10

ENV WILDFLY_STANDALONE_PATH /opt/jboss/wildfly/standalone
ENV WILDFLY_DEPLOY_PATH $WILDFLY_STANDALONE_PATH/deployments
ENV WILDFLY_FILES_PATH $WILDFLY_STANDALONE_PATH/data/files
ENV WILDFLY_LOGS_PATH $WILDFLY_STANDALONE_PATH/logs
ENV DYWA_APP_LOGS_PATH /var/log/dywa-app

RUN mkdir -p $WILDFLY_DEPLOY_PATH $WILDFLY_FILES_PATH $WILDFLY_LOGS_PATH $DYWA_APP_LOGS_PATH
